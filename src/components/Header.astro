---
import Nav from "@/components/Nav.astro";
import SocialNav from "@/components/SocialNav.astro";
import ThemeToggle from "@/components/ThemeToggle.astro";

const script = `
document.addEventListener('scroll', () => {
  const header = document.querySelector('header');
  if (window.scrollY > 0) {
    header.classList.add('bg-background-light/70', 'dark:bg-background-dark/70', 'backdrop-blur-md', 'border-b' ,'dark:border-gray-700/60', 'border-gray-400/70');
  } else {
    header.classList.remove('bg-background-light/70', 'dark:bg-background-dark/70', 'backdrop-blur-md', 'border-b', 'dark:border-gray-700/60', 'border-gray-400/70' );
  }
});
`;
---

<header class="w-full py-4 z-10 sticky top-0 md:px-0 px-4" data-aos="fade-down">
  <div class="max-w-screen-xl mx-auto flex items-center justify-between">
    <div class="flex items-center gap-8">
      <a href="/" class="text-xl font-bold font-mono"
        >vinidev<span class="animate-ping">_</span></a
      >
      <Nav />
    </div>
    <div class="flex items-center gap-2">
      <SocialNav />
      <span class="text-zinc-600 font-thin">|</span>
      <ThemeToggle />
    </div>
  </div>
</header>

<script is:inline set:html={script} />
