---
import { services } from "@/data/services.ts";
import { Accordion, AccordionItem } from "free-astro-components";
---

<section
  id="servicos"
  class="max-w-screen-lg mx-auto md:py-24 py-10 md:mt-10 md:mb-10 my-20 mx:px-0 px-4"
>
  <div class="flex md:gap-20 gap-10 md:flex-row flex-col-reverse">
    <div class="w-full" data-aos="fade-up">
      <Accordion>
        {
          services.map((service) => (
            <AccordionItem title={service.title}>
              <p>{service.description}</p>
            </AccordionItem>
          ))
        }
      </Accordion>
    </div>
    <div class="flex flex-col gap-4" data-aos="fade-down">
      <span
        class="md:text-xl text-base font-semibold uppercase dark:text-primary-dark text-primary-light"
        >O que eu faço</span
      >
      <h2 class="md:text-5xl text-3xl">
        Formas de como eu posso ajudar você ou sua empresa
      </h2>
    </div>
  </div>
</section>
